<%- include('../partials/header') %>
    <div class="container">
        <div class="row">
            <% movies.forEach((movie)=> { %>
                <div class="cellphone-container">
                    <div class="movie">
                        <div class="movie-img"
                            style="background-image: url(/<%= movie.movimage %>)">
                        </div>
                        <div class="text-movie-cont">
                            <div class="mr-grid">
                                <div class="col1">
                                    <h1><%= movie.title %></h1>
                                    <ul class="movie-gen">
                                        <li><%= movie.rating %>‚≠ê /</li>
                                        <li><%= movie.year %> /</li>
                                        <li><%= movie.genre %></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="mr-grid summary-row">
                                <div class="col2">
                                    <h5>SUMMARY</h5>
                                </div>
                            </div>
                            <div class="mr-grid">
                                <div class="col1">
                                    <p class="movie-description"> <%= movie.description %></p>
                                </div>
                            </div>

                            <div class="mr-grid action-row row justify-content-around">
                                <a href="/editmovie/<%= movie._id %>" class="watch-btn col-5 fs-5">
                                    Edit Movie
                                </a>
                                <a href="/deletemovie/<%= movie._id %>" class="watch-btn col-5 fs-5">
                                    Delete Movie
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('../partials/footer') %>